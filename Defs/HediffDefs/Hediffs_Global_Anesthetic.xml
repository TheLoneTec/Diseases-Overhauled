<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="DiseaseBase">
    <defName>Anesthetic</defName>
    <label>anesthetic</label>
    <description>Sleep drugs in the bloodstream. Anesthetic renders creatures unconscious.</description>
	<descriptionHyperlinks>
			<HediffDef>ComaTimed</HediffDef>
			<HediffDef>SecondaryDamage</HediffDef>
			<HediffDef>ComaForever</HediffDef>
	</descriptionHyperlinks>
    <isBad>false</isBad>
    <initialSeverity>1</initialSeverity>
    <maxSeverity>1</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_Disappears">
        <disappearsAfterTicks>45000~120000</disappearsAfterTicks>
      </li>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-0.8</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>wearing off</label>
        <painFactor>0.95</painFactor>
        <vomitMtbDays>4</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.9</setMax>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.1</offset>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.05</offset>
          </li>
        </capMods>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>50</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <minSeverity>0.6</minSeverity>
        <label>woozy</label>
        <painFactor>0.8</painFactor>
        <vomitMtbDays>0.25</vomitMtbDays>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.7</setMax>
          </li>
          <li>
            <capacity>Moving</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Manipulation</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Talking</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Metabolism</capacity>
            <offset>-0.2</offset>
          </li>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.15</offset>
          </li>
        </capMods>
        <forgetMemoryThoughtMtbDays>5</forgetMemoryThoughtMtbDays>
        <mentalStateGivers>
          <li>
            <mentalState>WanderConfused</mentalState>
            <mtbDays>5</mtbDays>
          </li>
        </mentalStateGivers>
      </li>
      <li>
        <minSeverity>0.8</minSeverity>
        <label>sedated</label>
        <painFactor>0</painFactor>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.01</setMax>
          </li>
        </capMods>
				<hediffGivers>
			<li Class="HediffGiver_Random">
					<hediff>ComaTimed</hediff>
					<mtbDays>180</mtbDays>
					<partsToAffect>
						<li>Brain</li>
					</partsToAffect>
				</li>
			<li Class="HediffGiver_Random">
					<hediff>SecondaryDamage</hediff>
					<mtbDays>240</mtbDays>
					<partsToAffect>
						<li>Brain</li>
					</partsToAffect>
				</li>
			<li Class="HediffGiver_Random">
					<hediff>ComaForever</hediff>
					<mtbDays>300</mtbDays>
					<partsToAffect>
						<li>Brain</li>
					</partsToAffect>
				</li>
		</hediffGivers>
      </li>
    </stages>
  </HediffDef>

</Defs>